<%- include('partials/header.ejs') %>

<body class="text-center">

    <%- include('partials/navbar.ejs') %>

    <div class="container mt-2"> 

        <%- include('partials/errormsg.ejs') %>

        <form action="/register" method="POST" class="form-signin mt-5">

            <img src="/img/escada.png">
    
            <h1 class="mb-5">Sign Up</h1>

            <input type="email" name="email" id="inputEmail" placeholder="Type your email..." class="form-control mb-3" required>
            <input type="password" name="password" id="inputPassword" placeholder="Type your password..." class="form-control mb-3" required>
            <input type="password" name="passwordConfirm" id="inputPasswordConfirm" placeholder="Confirm your password..." class="form-control mb-3" required>
            
            <button type="submit" style="background-color: #663A91; color: white;" class="btn">Sign up</button>

        </form>

    </div>

</body>

